include $(DEVKITARM)/base_rules

GCC_VERSION := $(shell $(CC) -dumpversion)

#---------------------------------------------------------------------------------
%.elf:
	$(SILENTMSG) linking $(notdir $@) #$(SILENTCMD)
	$(CC)  $(LDFLAGS) $(LIBPATHS) $(LIBS) $(OFILES)  -o $@